{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <h1 class="mb-3">Вход</h1>
                        <div class="form-group">
                            <label for="loginEmail">E-mail</label>
                            <input type="email" value="{{ last_username }}" class="form-control" id="loginEmail"
                                   name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="loginPass">Пароль</label>
                            <input type="password" value="{{ last_username }}" class="form-control"
                                   id="loginPass" name="password" required>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
