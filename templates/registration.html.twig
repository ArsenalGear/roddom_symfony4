{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}

                    {{ form_errors(form) }}

                    <div class="form-group">
                        <label for="registration_form_name">Имя</label>
                        {{ form_widget(form.name) }}
                    </div>

                    <div class="form-group">
                        <label for="registration_form_email">E-mail</label>
                        {{ form_widget(form.email) }}
                    </div>

                    <div class="form-group">
                        <label for="registration_form_phone">Телефон</label>
                        <div class="input-group mb-3">
                            {{ form_widget(form.phone) }}
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" id="accept_phone_reg">Подтвердить</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="registration_form_password">Код из СМС</label>
                        {{ form_widget(form.sms_code) }}
                    </div>

                    <div class="form-group">
                        <label for="registration_form_password">Пароль</label>
                        {{ form_widget(form.password) }}
                    </div>

                    <div class="form-group">
                        <label for="registration_form_repeat_password">Повторите пароль</label>
                        {{ form_widget(form.repeat_password) }}
                    </div>

                    {{ form_widget(form.agree_terms) }}

                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

